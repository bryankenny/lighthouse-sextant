<header class="p-4">
  <nav class="navbar navbar-expand-md navbar-dark bg-dark fixed-top" data-turbolinks-permanent="true" role="navigation">
    <a title="Home" class="navbar-brand" href="/index">
      <i class="fa fa-fw fa-lg fa-compass"></i>
    </a>
    <button aria-expanded="false" aria-label="Toggle navigation" class="navbar-toggler" data-target="#navbarCollapse" data-toggle="collapse" type="button">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarCollapse">
      <ul class="navbar-nav mr-auto">
        <li class="nav-item">
          <a title="My Resources" class="nav-link" href="/my-resources">
            <i class="fa fa-fw fa-flag"></i>
            <span class="label">My Resources</span>
          </a>
        </li>
      </ul>
      <ul class="navbar-nav ml-auto">

        <% if (typeof userID !== "undefined") { %>

          <li class="nav-item current-user">
            <a title="Profile" class="dropdown-toggle nav-link" href="/profile">
              <i class="fa fa-fw fa-cogs"></i>
              <span class="label" id="feedback-link"><%= userName %></span>
            </a>
          </li>

          <li class="nav-item">
            <form method="post" action="/logout">
              <input class="btn navbar-btn btn-primary" type="submit" value="Logout">
            </form>
          </li>

          <li class="nav-item">
            <form method="post" action="/user-resources">
              <input type="text" placeholder="Search by user" name="username">
              <button type="submit">Search</button>
            </form>
          </li>

        <% } else { %>

          <li class="nav-item">
            <a title="Login" class="nav-link" href="/login">
              <i class="fa fa-fw fa-comment"></i>
              <span class="non-tablet-label" id="feedback-link">Log In</span>
            </a>
          </li>
          <li class="nav-item">
            <a title="Register" class="nav-link" href="/register">
              <i class="fa fa-fw fa-comment"></i>
              <span class="non-tablet-label" id="feedback-link">Register Here</span>
            </a>
          </li>

       

        <% } %>
        
      </ul>
    </div>
  </nav>
</header>
