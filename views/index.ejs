<% include ./partials/_header %>

<h3>LHL Resource Wall</h3>
 


    
                            <h5 class="card-header" id="feedback-form">Submit Resource</h5>
                            <div class="card-body">
                                    <form novalidate="novalidate" class="simple_form new_activity_feedback" id="new_activity_feedback" action="/new-resource" accept-charset="UTF-8" data-remote="true" method="post">
                                        <input name="utf8" type="hidden" value="&#x2713;"/>
                                        <label class="string optional" for="activity_feedback_Rate this activity overall (optional)">Submit a New Resource</label>
                                        <div>
                                            <div class="raty-editor" name="feedback[rating]">
                                                <input type="hidden" name="activity_feedback[rating]" id="activity_feedback_rating"/>
                                            </div>
                                            <div class="hint"></div>
                                        </div>
                                        <div class="form-group text optional activity_feedback_detail">
                                            <label class="control-label text optional" for="activity_feedback_detail">Resource URL</label>
                                            <div>
                                                <textarea class="form-control text optional" placeholder="Resurce URL Goes Here" name="activity_feedback[detail]" id="activity_feedback_detail"></textarea>
                                            </div>
                                        </div>
                                        <div class="form-group text optional activity_feedback_detail">
                                                <label class="control-label text optional" for="activity_feedback_detail">Topic</label>
                                                <div>
                                                    <textarea class="form-control text optional" placeholder="Javascript, HTML, JQuery, etc..." name="activity_feedback[detail]" id="activity_feedback_detail"></textarea>
                                                </div>
                                            </div>
                                            <div class="form-group text optional activity_feedback_detail">
                                                    <label class="control-label text optional" for="activity_feedback_detail">Description</label>
                                                    <div>
                                                        <textarea class="form-control text optional" placeholder="A Short Description of The Resource Being Added" name="activity_feedback[detail]" id="activity_feedback_detail"></textarea>
                                                    </div>
                                                </div>
                                                <input type="submit" name="commit" value="Submit Resource" class="btn btn-tiny btn-primary" data-disable-with="Submit Feedback"/>
                                    </form>
                                </div>
                            </div>
                        </div> 


    
<div class="pinnednote   activity">
    <div class="name">Recent Resources</div>
</div>

<div class="pinned-content">
    <div class="instructions">
        <ul>
                <% for (let i in results) { %>
                    <li><a href= <%= results[i].url %>> - <%= results[i].title %></a> </a> </li>
                  <% } %>
          </ul>
    </div>
</div>



<% include ./partials/_footer %>
