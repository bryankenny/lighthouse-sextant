<% include ./partials/_header %>

<h3>LHL Resource Wall</h3>
 


    
<h5 class="card-header" id="feedback-form">Submit Resource</h5>
<div class="card-body">
        <form id="formInput" novalidate="novalidate"  action="/my-resources" accept-charset="UTF-8" data-remote="true" method="post">
            <input name="utf8" type="hidden" value="&#x2713;"/>
            <div>
                <div class="raty-editor" name="feedback[rating]">
                    
                </div>
                <div class="hint"></div>
            </div>
            <div class="form-group text optional activity_feedback_detail">
                <label class="control-label text optional" for="activity_feedback_detail">Resource URL</label>
                <div>
                    
                    <textarea class="form-control text optional" placeholder="Resource URL Goes Here" name="resource_url" id="activity_feedback_detail"></textarea>
                </div>
            </div>
                <div class="form-group text optional activity_feedback_detail">
                        <label class="control-label text optional" for="activity_feedback_detail">Description</label>
                        <div>
                            
                            <textarea class="form-control text optional" placeholder="A Short Description" name="resource_description" id="activity_feedback_detail"></textarea>
                        </div>
                    </div>
                    <div class="form-group text optional activity_feedback_detail">
                            <label class="control-label text optional" for="activity_feedback_detail">Topic</label>
                            <div>
                                    
                                <textarea class="form-control text optional" placeholder="Javascript, HTML, JQuery, etc..." name="resource_topic" placeholder="A Short Description of The Resource Being Added" name="resource_description" id="activity_feedback_detail"></textarea>
                            </div>
                        </div>        
                    <input type="submit" name="commit" value="Submit Resource" class="btn btn-tiny btn-primary" data-disable-with="Submit Feedback"/>
        </form>
    </div>
</div>
</div> 


    
<div class="pinnednote   activity">
    <div class="name">Recent Resources</div>
</div>

<div class="pinned-content">
    <div class="instructions">
        <ul>
                <% for (let i in results) { %>
                    <li><a href= <%= results[i].url %>> - <%= results[i].title %></a> </a> </li>
                  <% } %>
          </ul>
    </div>
</div>



<% include ./partials/_footer %>
